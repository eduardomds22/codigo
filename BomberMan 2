struct PowerUps {
    bool AumentoBomba=false; // OK
    int AumentoQuantidadeBomba=1;
    bool MaisBomba=true;
    int Jogador1Vidas = 1; //ok
    int Jogador2Vidas = 1; //ok
    bool SobreviverBomba = false; // OK
    bool PassarBlocosQuebraveis = true; // DEU CERTO
    int DestruicaoMaisBlocos = 1;
};


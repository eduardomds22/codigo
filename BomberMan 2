struct Pontuacao {
    int Movimento=0; ///OK
    int BombasUsadas=0; ///10 pontos OK
    int InimigosAbatidos=0; /// 100 pontos OK
    int CaixasDestruidas=0; /// 10 pontos
    int Pontos=0;/// OK
};

